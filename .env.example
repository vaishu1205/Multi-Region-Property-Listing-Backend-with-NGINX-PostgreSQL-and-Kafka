# PostgreSQL Configuration - US Region
POSTGRES_USER_US=postgres
POSTGRES_PASSWORD_US=postgres_us_password
POSTGRES_DB_US=properties_us
POSTGRES_PORT_US=5432

# PostgreSQL Configuration - EU Region
POSTGRES_USER_EU=postgres
POSTGRES_PASSWORD_EU=postgres_eu_password
POSTGRES_DB_EU=properties_eu
POSTGRES_PORT_EU=5433

# Kafka Configuration
KAFKA_BROKER=kafka:29092
KAFKA_TOPIC=property-updates
ZOOKEEPER_CLIENT_PORT=2181

# Backend Configuration - US
REGION_US=us
DATABASE_URL_US=postgresql://postgres:postgres_us_password@db-us:5432/properties_us
PORT_US=8000

# Backend Configuration - EU
REGION_EU=eu
DATABASE_URL_EU=postgresql://postgres:postgres_eu_password@db-eu:5432/properties_eu
PORT_EU=8000

# NGINX Configuration
NGINX_PORT=8080